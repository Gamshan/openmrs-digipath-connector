    <changeSet author="gamshan" id="20260206-2">
        <comment>Create the digipath_connector table</comment>
        <createTable tableName="digipath_connector">
            <column name="digipath_connector_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)" />
            <column name="description" type="VARCHAR(255)" />
        </createTable>
    </changeSet>
 
